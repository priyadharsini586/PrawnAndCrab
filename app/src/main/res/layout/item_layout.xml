<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="@dimen/item_padding"

        android:paddingLeft="@dimen/item_padding"
        android:paddingRight="@dimen/item_padding">
        <LinearLayout
            android:id="@+id/selected_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/item_half_padding"
            android:paddingRight="@dimen/item_half_padding"
            android:background="@drawable/rounded_corner">
            <ImageView
                android:layout_width="@dimen/item_image_Width"
                android:layout_height="@dimen/item_image_height"
                android:src="@drawable/cook1"
                android:scaleType="centerCrop"
                android:id="@+id/image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/item_padding"
                android:paddingRight="@dimen/item_half_padding"
                android:orientation="vertical"
                android:paddingBottom="@dimen/item_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="name"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/item_title_size"
                    android:gravity="center"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <ImageView
                                    android:id="@+id/imgNotes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="end"
                                    android:paddingLeft="@dimen/item_padding"
                                    android:paddingRight="@dimen/item_padding"
                                    android:src="@drawable/chef_notes" />
                            </LinearLayout>
                        </LinearLayout>
                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:textSize="@dimen/item_des_size"
                    android:maxLines="2"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </RelativeLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_close_icon"
                        android:visibility="gone"

                      />
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price"
                        android:textColor="#008000"
                        android:paddingBottom="@dimen/item_padding"
                        android:paddingTop="@dimen/item_half_padding"
                        android:textSize="@dimen/item_price_size"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                   >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                  <!--  <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty:"
                        android:textColor="@color/black_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:gravity="center"/>-->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_minus_icon"
                        android:padding="@dimen/item_padding"
                        android:id="@+id/imgMinus"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/black_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/item_price_size"
                        android:id="@+id/txtNumQty"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus_icon"
                        android:padding="@dimen/item_padding"
                        android:id="@+id/imgAdd"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_gravity="center">
                       <!-- <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price:"
                            android:textSize="17sp"
                            android:textColor="@color/black_color"
                            android:padding="10dp"/>-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/item_price_size"
                            android:textStyle="bold"
                            android:padding="@dimen/item_half_padding"
                            android:id="@+id/txtTotalPrice"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
</LinearLayout>
