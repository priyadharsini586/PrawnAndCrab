<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:background="@drawable/bubble_right"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:minWidth="180dp"
        android:id="@+id/layBg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/testUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f35119"
            android:text="Priya"
            android:textSize="@dimen/testimony_username"
            />
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#939393"
            android:text="12 dec 17"
            android:textSize="@dimen/testimony_time"
            android:gravity="end"
            android:layout_gravity="end"
            />
            </LinearLayout>
        <ImageView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imgMsg"
            />
        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/testimony_content"
           android:text="hi"
           android:maxWidth="250dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#939393"
                android:text="Waiting for Approval"
                android:textSize="@dimen/testimony_time"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#939393"
                    android:text="07.12 PM"
                    android:textSize="@dimen/testimony_time"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ldtCircle"
            android:gravity="start"
            android:paddingRight="10dp"
            android:paddingLeft="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_testimony_user_name"
                app:civ_border_width="1dp"
                app:civ_border_color="#ababab"
                android:id="@+id/ic_profile"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>