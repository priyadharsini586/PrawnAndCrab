<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nickteck.cus_prawnandcrab.fragment.MyOrdersFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myOrderRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layoutAnimation="@anim/layout_animation_fall_down"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange_color"
            android:padding="15dp"
            android:id="@+id/ldtAddMore">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add More"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:textSize="@dimen/item_heading_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
           android:background="@color/colorPrimaryDark"
            android:padding="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price"
               android:gravity="center"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:id="@+id/txtTotalPrice"
                android:textSize="@dimen/item_heading_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="@color/orange_color"
            android:gravity="center"
            android:id="@+id/ldtPlaceOrder"
            android:orientation="horizontal">
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place_order"
                android:paddingRight="10dp"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conform Order"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:textSize="@dimen/item_heading_text_size"
                android:id="@+id/txtPlaceItem"
                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_item"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:textSize="@dimen/item_heading_text_size"
                android:visibility="gone"
                android:id="@+id/txtUpdateItem"/>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
